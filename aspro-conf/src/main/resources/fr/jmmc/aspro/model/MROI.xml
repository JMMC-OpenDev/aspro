    <configuration>
        <interferometer>MROI</interferometer>

        <!-- instruments (4T) -->

        <instrument>
            <focalInstrument>TEST_4T</focalInstrument>

            <!--
            !    MROI
              ! A10 = N1, N2, N3	W0, W1, W2, W3	S1, S2, S3
              ! A6 = N1-N2-W1-W2-S1-S2 further splitted in: N1-N2-W1-W2 + N1-N2-S1-S2 + W1-SW2-S1-S2, etc..
              let oipt%mroi%i4s%Config -
              "N1 W1 W2 S1" "N2 W1 W2 S2" "N1 N2 S1 S2" -
              "N2 W2 W4 S2" "N4 W2 W4 S4" "N2 N4 S2 S4" -
              "N4 W4 W6 S4" "N6 W4 W6 S6" "N4 N6 S4 S6" -
              "N6 W6 W8 S6" "N8 W6 W8 S8" "N6 N8 S6 S8" ! always a triangle, or...
            !   let oipt%mroi%i4s%Config -
            ! "N1 N2 W1 W2"  "N1 N2 S1 S2"  "W1 W2 S1 S2" -
            ! "N2 N4 W2 W4"  "N2 N4 S2 S4"  "W2 W4 S2 S4" -
            ! "N4 N6 W4 W6"  "N4 N6 S4 S6"  "W4 W6 S4 S6" -
            ! "N6 N8 W6 W8"  "N6 N8 S6 S8"  "W6 W8 S6 S8" ! simpler, straighter.
            -->

            <configuration>
                <stations>N1 W1 W2 S1</stations>
            </configuration>
            <configuration>
                <stations>N2 W1 W2 S2</stations>
            </configuration>
            <configuration>
