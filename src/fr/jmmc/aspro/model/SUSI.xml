<a:interferometerSetting
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xmlns:a='http://www.jmmc.fr/aspro-oi/0.1'
  xsi:schemaLocation='http://www.jmmc.fr/aspro-oi/0.1 AsproOIModel.xsd'>

  <description>
    <name>SUSI</name>

    <description>Sydney University Stellar Interferometer (SUSI)</description>

    <!--
      Coordinates SUSI:
        lat = -30.322273888889
        lon = 149.548224972222
        alt = 210.0
    -->
    <position>
      <posX>-4738331.569113477</posX>
      <posY>2785721.2822074075</posY>
      <posZ>-3214789.84150198</posZ>
    </position>
    
    <telescope>
      <name>T</name>
      <diameter>0.2</diameter>
      <maxElevation>85.0</maxElevation>

      <adaptiveOptics>
        <band>V</band>
        <!-- tip tilt -->
        <numberActuators>2</numberActuators>
      </adaptiveOptics>

      <!--
        Moon Pointing Restrictions on SUSI: 5 deg at least !
      -->
      <moonPointingRestriction>
        <warningThreshold>10</warningThreshold>
        <restriction>
          <separation>5.0</separation>
        </restriction>
      </moonPointingRestriction>

    </telescope>

    <station>
      <name>S1</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>0.0</posX>
        <posY>0.0</posY>
        <posZ>0.0</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>S2</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>-0.000792</posX>
        <posY>-4.997297</posY>
        <posZ>0.008046</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>S3</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>-0.001261</posX>
        <posY>-24.994068</posY>
        <posZ>0.045190</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>S4</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>0.002581</posX>
        <posY>-105.000399</posY>
        <posZ>0.184646</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>N1</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>0.002281</posX>
        <posY>4.997701</posY>
        <posZ>-0.007854</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>N3</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>0.005409</posX>
        <posY>14.998239</posY>
        <posZ>-0.025706</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <station>
      <name>N4</name>
      <telescope>T</telescope>
      <relativePosition>
        <posX>0.000358</posX>
        <posY>54.996267</posY>
        <posZ>-0.096034</posZ>
      </relativePosition>
      <delayLineFixedOffset>0.0</delayLineFixedOffset>
    </station>

    <channel>
      <name>V1</name>
    </channel>
    <channel>
      <name>V2</name>
    </channel>

    <!-- DL : 
    2-in-1 delay line for SUSI. The maximum length of each is 70m. 
    As 1 delay increases, the other decreases by the same amount.
    = 2 DL with half length: 35m -->
    <delayLine>
      <name>DL1</name>
      <maximumThrow>35</maximumThrow>
    </delayLine>
    <delayLine>
      <name>DL2</name>
      <maximumThrow>35</maximumThrow>
    </delayLine>


    <fringeTracker>
      <name>PAVO_FT</name>
      <band>I</band>

      <mode>Group</mode>

      <instrumentVisibility>0.8</instrumentVisibility>
      <magLimit>4.5</magLimit>
      <maxIntegration>1</maxIntegration>
    </fringeTracker>

    <!-- instruments (2T) -->

    <focalInstrument>
      <name>PAVO_2T</name>
      <description>PAVO combiner using 2T</description>
      <numberChannels>2</numberChannels>
      <defaultSamplingTime>40</defaultSamplingTime>
      <fringeTracker>PAVO_FT</fringeTracker>

      <!-- noise parameters -->
      <transmission>0.02</transmission>
      <dit>0.004</dit>
      <ron>20</ron>
      <detectorSaturation>32700</detectorSaturation>
      <instrumentVisibility>0.9</instrumentVisibility>
      <instrumentVisibilityBias>2</instrumentVisibilityBias>
      <instrumentPhaseBias>1</instrumentPhaseBias>
      <nbPixInterferometry>4</nbPixInterferometry>
      <nbPixPhotometry>0</nbPixPhotometry>
      <fracFluxInInterferometry>1</fracFluxInInterferometry>

      <mode>
        <name>R</name>
        <resolution>40</resolution>
        <waveLengthMin>0.51</waveLengthMin>
        <waveLengthMax>0.8</waveLengthMax>
      </mode>

    </focalInstrument>

  </description>

  <configuration>
    <interferometer>SUSI</interferometer>

    <!-- PAVO 2T -->
    <instrument>
      <focalInstrument>PAVO_2T</focalInstrument>

      <configuration>
        <stations>S1 S2</stations>
      </configuration>
      <configuration>
        <stations>S1 S3</stations>
      </configuration>
      <configuration>
        <stations>S1 S4</stations>
      </configuration>
      <configuration>
        <stations>S1 N1</stations>
      </configuration>
      <configuration>
        <stations>S1 N3</stations>
      </configuration>
      <configuration>
        <stations>S1 N4</stations>
      </configuration>
      <configuration>
        <stations>S2 S3</stations>
      </configuration>
      <configuration>
        <stations>S2 S4</stations>
      </configuration>
      <configuration>
        <stations>S2 N1</stations>
      </configuration>
      <configuration>
        <stations>S2 N3</stations>
      </configuration>
      <configuration>
        <stations>S2 N4</stations>
      </configuration>
      <configuration>
        <stations>S3 S4</stations>
      </configuration>
      <configuration>
        <stations>S3 N1</stations>
      </configuration>
      <configuration>
        <stations>S3 N3</stations>
      </configuration>
      <configuration>
        <stations>S3 N4</stations>
      </configuration>
      <configuration>
        <stations>S4 N1</stations>
      </configuration>
      <configuration>
        <stations>S4 N3</stations>
      </configuration>
      <configuration>
        <stations>S4 N4</stations>
      </configuration>
      <configuration>
        <stations>N1 N3</stations>
      </configuration>
      <configuration>
        <stations>N1 N4</stations>
      </configuration>
      <configuration>
        <stations>N3 N4</stations>
      </configuration>
    </instrument>
  </configuration>

</a:interferometerSetting>